{
    "common": {
        "name":                     "megaesp",
        "version":                  "0.0.7",
	"news": {
            "0.0.7": {
                "en":               "riname adapter",
                "de":               "riname adapter",
                "ru":               "riname adapter"
            }
        },
        "title":                    "MegaESP-8266 Adapter",
        "desc":                     {
            "en": "Lets control the MegaESP-8266 over ethernet/internet (http://www.ab-log.ru/forum/viewtopic.php?f=1&t=1130)",
            "de": "Ermöglicht die steuerung von MegaESP-8266 über Ethernet/Internet (http://www.ab-log.ru/forum/viewtopic.php?f=1&t=1130)",
            "ru": "Позволяет управлять MegaESP-8266 через ethernet/интернет (http://www.ab-log.ru/forum/viewtopic.php?f=1&t=1130)"
        },
        "authors": [
            "aushaus <teshaus@gmail.com>"
        ],
        "license":                  "MIT",
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "loglevel":                 "info",
        "icon":                     "megad.png",
        "messagebox":               true,
        "readme":                   "https://github.com/ausHaus/ioBroker.megaesp/blob/master/README.md",
        "keywords":                 ["MegaESP-8266", "communication"],
		"enabled":                  true,
        "extIcon":                  "https://raw.githubusercontent.com/ioBroker/ioBroker.megad/master/admin/megad.png",
        "type":                     "hardware",
        "localLink":                "http://%native_ip%/%password%",
        "config": {
            "width":     1050,
            "height":    800,
            "minWidth":  600,
            "minHeight": 500
        }
    },
    "native": {
        "ip":                       "",
        "name":                     "",
        "port":                     80,
        "pollInterval":             30,
        "password":                 "sec",
        "longPress":                700,
        "doublePress":              600,
        "ports":                    []
    },
    "instanceObjects": [
        {
            "_id":  "info",
            "type": "channel",
            "common": {
                "name": "Information"
            },
            "native": {}
        },
        {
            "_id":  "info.connection",
            "type": "state",
            "common": {
                "role":  "indicator.connected",
                "name":  "If connected to MegaESP",
                "type":  "boolean",
                "read":  true,
                "write": false,
                "def":   false
            },
            "native": {}
        }
    ]
}
